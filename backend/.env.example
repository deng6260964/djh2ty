# Flask应用配置
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1

# 数据库配置
DATABASE_URL=sqlite:///english_tutoring.db
DEV_DATABASE_URL=sqlite:///dev_english_tutoring.db

# JWT配置
JWT_SECRET_KEY=your-jwt-secret-key-here
SECRET_KEY=your-secret-key-here
JWT_ACCESS_TOKEN_HOURS=1
JWT_REFRESH_TOKEN_DAYS=30

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# 文件上传配置
MAX_CONTENT_LENGTH=50

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/english_tutoring.log
LOG_MAX_BYTES=10240000
LOG_BACKUP_COUNT=10

# API配置
API_TITLE=English Tutoring System API
API_VERSION=v1